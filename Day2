#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;


int main() {
    double mealCost;
    double tipPercent,taxPercent;
    cin>>mealCost>>tipPercent>>taxPercent;
    tipPercent=(tipPercent/100)*mealCost;
    taxPercent=(taxPercent/100)*mealCost;
    cout<<"The total meal cost is "<<round(tipPercent+taxPercent+mealCost)<<" dollars.";
    return 0;
}
